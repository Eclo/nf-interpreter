cmake_minimum_required(VERSION 3.15)

project(WICED_SDK-download NONE)

include(ExternalProject)

# download WICED SDK source from nanoFramework GitHub fork
ExternalProject_Add( 
    WICED_SDK
    PREFIX WICED_SDK
    SOURCE_DIR ${CMAKE_BINARY_DIR}/WICED_SDK_Source
    GIT_REPOSITORY  https://github.com/nanoframework/WICED_Wi-Fi_43xxx
    GIT_TAG "nf-build"  # target nanoFramework modified branch
    GIT_SHALLOW 1   # download only the tip of the branch, not the complete history
    TIMEOUT 10
    LOG_DOWNLOAD 1
    # Disable all other steps
    INSTALL_COMMAND ""
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
)
