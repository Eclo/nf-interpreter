cmake_minimum_required(VERSION 3.15)

project(TivaWare-download NONE)

include(ExternalProject)

# download TivaWare from nanoFramework repo
ExternalProject_Add(
    TivaWare
    PREFIX TivaWare
    SOURCE_DIR ${CMAKE_BINARY_DIR}/TivaWare_Source
    GIT_REPOSITORY  https://github.com/Eclo/TivaWare-C-Series
    GIT_TAG ${TI_TIVAWARE_TAG}  # target specified branch
    GIT_SHALLOW 1   # download only the tip of the branch, not the complete history
    TIMEOUT 10
    LOG_DOWNLOAD 1

    # Disable all other steps
    INSTALL_COMMAND ""
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
)
